<vertical spacing="1" horizontal-fit="PreferredSize" xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='- https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
	<macro.as-host host='config'>
		<toggle-setting text='Vertical Layout' value='verticalLayout' apply-on-change='true'/>
	</macro.as-host>
	<string-setting text='Counter Splits (Comma Seperated)' value='splits' apply-on-change='true' bind-value='true'/>
	<text align='Center' text='~version' font-size="3" font-color="#CC6E3B"/>
</vertical>